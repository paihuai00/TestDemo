<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="分享到"
        android:textColor="@color/color33"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wechat_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_wechat_moments"
            android:gravity="center"
            android:text="@string/str_wechat_monents"
            android:textColor="@color/color33"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_wechat"
            android:gravity="center"
            android:text="@string/str_wechat"
            android:textColor="@color/color33"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_qq"
            android:gravity="center"
            android:text="@string/str_qq"
            android:textColor="@color/color33"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/ic_weibo"
            android:gravity="center"
            android:text="@string/str_weibo"
            android:textColor="@color/color33"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg_share_e2"
        android:gravity="center"
        android:text="@string/str_cancel"
        android:textColor="#7b7b7b" />
</LinearLayout>