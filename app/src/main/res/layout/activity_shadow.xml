<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mytestdemo.my_shadow_img.ShadowActivity">


    <com.yinglan.shadowimageview.ShadowImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shadow_img"
        app:shadowRound="20dp"
        app:shadowSrc="@drawable/ic_shadow"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/shadow_img">

        <com.yinglan.shadowimageview.ShadowImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearSort"
            app:shadowRound="20dp"
            app:shadowSrc="@drawable/ic_shadow"/>

        <com.yinglan.shadowimageview.ShadowImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CorneredSort"
            app:shadowRound="20dp"
            app:shadowSrc="@drawable/ic_shadow"/>

        <com.yinglan.shadowimageview.ShadowImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RadialSort"
            app:shadowRound="20dp"
            app:shadowSrc="@drawable/ic_shadow"/>


        <com.yinglan.shadowimageview.ShadowImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RandomSort"
            app:shadowRound="20dp"
            app:shadowSrc="@drawable/ic_shadow"/>

        <!--<com.yinglan.shadowimageview.ShadowImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/shadow_img"-->
            <!--app:shadowRound="20dp"-->
            <!--app:shadowSrc="@drawable/ic_shadow"/>-->

    </LinearLayout>


</RelativeLayout>
