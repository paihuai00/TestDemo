<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--昼夜模式主色调-->
    <attr name="dayNightBackground" format="color|reference" />
    <attr name="dayNightOneTextColor" format="color|reference" />
    <attr name="dayNightTwoTextColor" format="color|reference" />
    <attr name="dayNightThreeTextColor" format="color|reference" />
    <attr name="dayNightBackgroundDrawable" format="color|reference" />

    <declare-styleable name="IRecyclerView">
        <attr name="refreshHeaderLayout" format="reference" />
        <attr name="loadMoreFooterLayout" format="reference" />
        <attr name="refreshEnabled" format="boolean" />
        <attr name="loadMoreEnabled" format="boolean" />
        <attr name="refreshFinalMoveOffset" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CirclePercentView">
        <attr name="circleBg" format="color" />
        <attr name="arcColor" format="color" />
        <attr name="arcWidth" format="dimension" />
        <attr name="percentTextColor" format="color" />
        <attr name="percentTextSize" format="dimension" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MyRatingBar">
        <!--填充图片-->
        <attr name="star_img" format="reference" />
        <!--默认图片-->
        <attr name="unstar_img" format="reference" />
        <!--图片宽度-->
        <attr name="img_width" format="dimension" />
        <!--图片高度-->
        <attr name="img_height" format="dimension" />
        <!--图片直接距离-->
        <attr name="img_padding" format="dimension" />
        <!--图片总数-->
        <attr name="star_count" format="integer" />
        <!--填充的图片数量-->
        <attr name="star_number" format="integer" />
        <!--是否可以点击-->
        <attr name="clickable" format="boolean" />
    </declare-styleable>

    <!--类似百度贴吧 LoadingView 自定义属性-->
    <declare-styleable name="LoadingView">
        <!---->
        <attr name="middle_text" format="string" />
        <attr name="loading_color" format="reference|color" />
    </declare-styleable>

    <!--QQ计步器，圆环 自定义属性-->
    <declare-styleable name="QqStepCountView">
        <attr name="maxCount" format="integer" />
        <attr name="outArcColor" format="reference|color" />
        <attr name="innerArcColor" format="reference|color" />

        <!--圆弧宽度-->
        <attr name="storkeWidth" format="integer" />
        <!--文字-->
        <attr name="arcTextSize" format="dimension" />
        <attr name="arcTextColor" format="color|reference" />

    </declare-styleable>
    
    <!--数字圆环-->
    <declare-styleable name="DigitalLoadingView">
        <!--进度条颜色-->
        <attr name="progress_color" format="color|reference" />

        <!--中心文字颜色-->
        <attr name="text_color" format="color|reference" />
    </declare-styleable>
    

</resources>